<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolbarNormalStyle" parent="@style/AllRecipesTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="isLightTheme">false</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <!--<item name="queryBackground">@drawable/textfield_search_white_holo_light</item>-->
        <item name="queryBackground">@null</item>"
    </style>

    <style name="TooltipTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolTipLayoutRecipesStyle">
        <item name="ttlm_padding">@dimen/d3</item>
        <item name="ttlm_strokeColor">@android:color/transparent</item>
        <item name="ttlm_backgroundColor">@color/tooltip_background</item>
        <item name="ttlm_strokeWeight">@dimen/ttlm_default_stroke_weight</item>
        <item name="ttlm_cornerRadius">@dimen/d0</item>
        <item name="ttlm_arrowRatio">1</item>
        <item name="android:textAppearance">@style/TooltipTextStyle</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayDefaultStyle</item>
        <item name="ttlm_elevation">@dimen/d0_half</item>
    </style>

</resources>
