<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d1"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/d3"
    android:layout_marginTop="@dimen/d1"
    android:paddingBottom="@dimen/d1_three_quarter">

    <ImageView
        android:id="@+id/videoThumbnail"
        android:layout_width="270dp"
        android:layout_height="@dimen/toolbar_layout_image_height"
        android:scaleType="centerCrop"
        android:src="@color/accent" />

    <com.allrecipes.custom.views.AllRecipesTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d2"
        android:layout_marginRight="@dimen/d2"
        android:layout_marginTop="@dimen/d1_quarter"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="1"
        android:text="adwqqrqwrqwrqwr"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/s2_quarter"/>

</LinearLayout>
